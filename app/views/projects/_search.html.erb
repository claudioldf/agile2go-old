<%= form_tag(root_path, :method => "get", class: "navbar-search pull-right", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "search-query", placeholder: "Search"  %>
    <button class="btn btn-inverse" type="submit"><i class="icon-search"></i></button>
  </div>
<% end %>



