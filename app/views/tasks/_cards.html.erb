<div>
  <% @tasks.map do |task| %>
      <div class="span3">
        <div class="card" style="background-color: <%= background_color(task) %>">
          <h3 style="float: left;">
            <%= task.id %>
          </h3>
            <p>Hours - <%= task.hours %></p>
            <p>Priority - <%= task.priority %></p>
            <% task.users.each do |u| %>
                <img style="float: right; margin-top: -8%;" id="tooltip-bottom" class="avatar-1" title="<%= u.name %> - <%= u.email %>" src="<%= u.gravatar_url %>" />
            <% end %>
            <p>
              <span title="<%= task.storie %>"><%= link_to 'more...', task_path(task) %></span>
            </p>
        </div>
        <br />
      </div>
  <% end %>
</div>
