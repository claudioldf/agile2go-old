<%= link_to 'Create new Task',
    new_task_path,
    class: 'btn btn-primary btn-large btn-center' %>

<%= link_to content_tag('i', '.csv', class: 'icon-download-alt'),
  tasks_path(format: 'csv'),
  title: 'export to .csv',
  class: 'ttip-bottom'%>

<%= link_to content_tag('i', '.xls', class: 'icon-download-alt'),
  tasks_path(format: 'xls'),
  title: 'export to .xls',
  class: 'ttip-right' %>

<hr/>
<%= form_tag(tasks_path, method: 'get') do %>
    <ul class="nav nav-pills">
      <span class="label label-important">
        <%= link_to 'todo', tasks_path(status: 'todo'), remote: true %>
      </span>
      <span id="done" class="label label-success">
        <%= link_to 'done', tasks_path(status: 'done'), remote: true %>
      </span>
      <span id="ongoing" class="label label-info">
        <%= link_to 'ongoing', tasks_path(status: 'ongoing'), remote: true %>
      </span>
      <span id"test" class="label label-inverse">
        <%= link_to 'test', tasks_path(status: 'test'), remote: true %>
      </span>
    </ul>
<% end %>

<%= will_paginate @tasks %>
<%= render 'tasks/cards' %>
<%= will_paginate @tasks %>


