<div class="span4">
  <div class="card" style="padding: 5% 10% 10%;">
    <h3><%= task.id %></h3>
    <div class="progress progress-striped active">
      <div class="bar <%= progress(task) %>" style="width: 100%;"></div>
    </div>
    <p><span><%= task.storie %></span></p>
    <p>Hours - <%= task.hours %></p>
    <p>Priority - <%= task.priority %></p>
    <ul class="left nav nav-pills">
      <% task.users.each do |u| %>
        <img src="<%= u.gravatar_url %>" />
      <% end %>
    </ul>
  </div>
</div>
