<p></p>
<%= link_to content_tag('i', '.csv', class: 'icon-download-alt'),
  users_path(format: 'csv'),
  title: 'export to .csv',
  class: 'ttip-bottom'%>

<%= link_to content_tag('i', '.xls', class: 'icon-download-alt'),
  users_path(format: 'xls'),
  title: 'export to .xls',
  class: 'ttip-right' %>

<div class="row">
  <% @users.each do |user| %>
    <div class="span4">
      <div class="card-project" style="padding: 5% 10% 12%;">
        <img id="avatar-2" src="<%= user.gravatar_url %>" title="<%= user.email %>" />
        <h3><%= user.name %></h3>
        <hr />
        <p><span><%= user.email %> </span></p>
        <p><span><%= user.roles.first.name.titleize unless user.has_role %></span></p>
        <span class="right"><%= link_to content_tag('span', 'remove', class: 'label label-important'),
          user,
          confirm: "Are you sure you want to delete '#{user.name}'?",
          method: :delete %></span>
      </div>
    </div>
  <% end  %>
</div>
