<div class="page-header">
  <h2 class="muted">Sign up</h2>
  <div class="alert alert-block alert-info">
    <h4>Info</h4>
    Hey dude, you can go to Sign in page and sign in with => user_vip@gmail.com.br / user_vip
  </div>
</div>

<%= simple_form_for resource, as: resource_name,
  url: registration_path(resource_name),
                    html: {class: 'form-horizontal' },
                    defaults: { input_html: { class: 'text_field inp-xlarge' }} do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>  
  <%= f.input :name, placeholder: 'Name', autofocus: true, input_html: { class: 'text_field input-xlarge' } %>
  <%= f.input :email, placeholder: 'Email', required: true, input_html: { class: 'text_field input-xlarge' } %>
  <%= f.input :password, placeholder: 'Password', required: true, input_html: { class: 'text_field input-xlarge' } %>
  <%= f.input :password_confirmation, placeholder: 'Confirmation', required: true, input_html: { class: 'text_field input-xlarge' } %>
  <div class="form-actions">
    <%= f.button :submit, 'Sign up', class: 'btn-primary btn-large' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


