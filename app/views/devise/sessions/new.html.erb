<div class="page-header">
	<h2 class="muted">Sign in</h2>
</div>
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>  
		<%= f.input :email, :placeholder => 'Email', :autofocus => true, input_html: { class: 'text_field input-xlarge' } %>
		<%= f.input :password, :placeholder => 'Password', input_html: { class: 'text_field input-xlarge' } %>
		<%= f.input :remember_me, input_html: { class: 'custom-checkbox' } , :as => :boolean if devise_mapping.rememberable? %>
		<div class="form-actions">
			<%= f.button :submit, "Sign in", :class => 'btn-primary btn-large' %>
		</div>
	<% end %>
<%= render "devise/shared/links" %>

