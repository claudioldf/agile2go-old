<%- model_class = Sprint -%>
<div class="page-header">
  <h1 class="muted"><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt>
    <strong>Name:</strong>
  </dt>
  <dd><%= sprint.name %></dd>
  <dt>
    <strong>Start Date:</strong>
  </dt>
  <dd><%= sprint.start_date %></dd>
  <dt>
    <strong>End Date:</strong>
  </dt>
  <dd><%= sprint.end_date %></dd>
  <dt>
    <strong>Daily Scrum:</strong>
  </dt>
  <dd><%= sprint.daily_scrum %></dd>
  <dt>
    <strong>Goal:</strong>
  </dt>
  <dd><%= sprint.goal %></dd>
  <dt>
    <strong>Project:</strong>
  </dt>
  <dd><%= sprint.project.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sprints_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sprint_path(sprint), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sprint_path(sprint),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
