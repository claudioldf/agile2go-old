<%= simple_form_for @sprint, :html => { :class => 'form-horizontal' } do |f| %>    
  <%= f.input :name, placeholder: "Sprint Name", input_html: { class: 'text_field input-xlarge' } %>      
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_date, placeholder: "Start Date", 'data-behaviour' => 'datepicker', :class => 'text_field input-xlarge' %>
    </div>
  </div>    
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_date, placeholder: "End Date", 'data-behaviour' => 'datepicker', :class => 'text_field input-xlarge' %>
    </div>
  </div>    
  <%= f.input :daily_scrum, placeholder: "Daily Scrum", input_html: { class: 'text_field input-xlarge' } %>      
  <%= f.input :goal, placeholder: "Goal", input_html: { class: 'text_field input-xlarge' } %>      
  <%= f.association :project, placeholder: "Project", collection: Project.all, input_html: { class: 'text_field input-xlarge' } %>    

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sprints_path, :class => 'btn' %>
  </div>
<% end %>
