<%= simple_form_for @sprint, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :daily_scrum %>
  <%= f.input :goal %>
  <%= f.input :project_id, collection: Project.all %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sprints_path, :class => 'btn' %>
  </div>
<% end %>
