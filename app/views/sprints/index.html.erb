<%= link_to 'Create new Sprint',
    new_sprint_path,
    class: 'btn btn-primary btn-large btn-center' %>

<%= link_to content_tag('i', '.csv', class: 'icon-download-alt'),
  sprints_path(format: 'csv'),
  title: 'export to .csv',
  class: 'ttip-bottom'%>

<%= link_to content_tag('i', '.xls', class: 'icon-download-alt'),
  sprints_path(format: 'xls'),
  title: 'export to .xls',
  class: 'ttip-right' %>

<div class="row">
  <% @sprints.each do |sprint| %>
    <div class="span4">
      <div class="card-project" style="padding: 5% 10% 12%;">
        <h3><%= link_to sprint.name, edit_sprint_path(sprint) %></h3>
        <h5 class="muted"><%= sprint.project.name %></h5>
        <hr />
        <p class="left"><span><%= sprint.goal %></span></p>
        <p>Deadline - <span><%= sprint.end_date %> </span></p>
        <p>Daily - <span><%= sprint.daily_scrum %> </span></p>
        <span class="right"><%= link_to content_tag('span', 'remove', class: 'label label-important'),
          sprint,
          confirm: "Are you sure you want to delete '#{sprint.name}'?",
          method: :delete %></span>
      </div>
    </div>
  <% end %>
</div>
