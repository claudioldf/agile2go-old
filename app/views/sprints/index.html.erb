<%- model_class = Sprint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table id="sprintTable" class="datatable table table-striped table-bordered table-condensed">  
  <thead>
    <tr>
      <th>#Id</th>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Daily Scrum</th>      
      <th>Project</th>
      <th>Registered</th>      
      <th>Actions</th>      
    </tr>
  </thead>
  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= link_to sprint.id, sprint_path(sprint) %></td>
        <td><%= sprint.name %></td>
        <td><%= sprint.start_date %></td>
        <td><%= sprint.end_date %></td>
        <td><%= sprint.daily_scrum %></td>        
        <td><%= sprint.project.name %></td>
        <td><%=l sprint.created_at.to_date %></td>
        <td>
          <%= link_to content_tag('i', '', class: 'icon-edit'), edit_sprint_path(sprint), :id => 'edit-tooltip', :title => 'edit' %>
          <%= link_to content_tag('i', '', class: 'icon-trash '), sprint, :id => 'del-tooltip', :title => 'delete', confirm: "Are you sure you want to delete '#{sprint.name}'?", method: :delete  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @sprints.size > 0 %>
  <ul class="nav nav-pills">      
    <li class="active"><%= link_to "CSV", sprints_path(format: "csv"), :id => 'csv-tip', :title => 'export to .csv' %></li>                        
    <li class="active"><%= link_to "Excel", sprints_path(format: "xls"), :id => 'xls-tip', :title => 'export to .xls' %></li>
  </ul>                                          
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sprint_path,
            :class => 'btn btn-primary' %>
