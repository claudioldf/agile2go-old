<br />
<div id="chart" style="width:100%; height:400px;"></div>

<script type="text/javascript">        
	$(function(){ 
        $('#content').removeClass('content')
    	$('#chart').highcharts({
        	chart: {
            	type: 'bar'
        	},
        	title: {
            	text: 'Dashboard'
        	},
        	xAxis: {
            	categories: [ <% @projects.map do |p| %> '<%= p.name %>', <% end %> ]
        	},
        	yAxis: {
            	title: {
	                text: 'Qtd'
            	}
        	},
            plotOptions: {
                series: {
                    stacking: 'normal'
                }
            },
        	series: [                         
            <% @tasks.map do |t| %>                        
            {
            	name: '<%= t.status %>',                
            	data: <%= raw qtd_by(t.status , @projects).to_s %>
        	},                         
            <% end %>                              
            ]            
    	});        
	});    
</script>
