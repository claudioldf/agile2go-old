<%= javascript_include_tag "highcharts" %>    
<%= javascript_include_tag "exporting" %>    
  <div id="chart" style="width:100%; height:400px;"></div>
    <script type="text/javascript">        
      $(function(){ 
        $('#content').removeClass('content')
          $('#chart').highcharts({
            chart: {
              type: 'bar'
            },
            colors: ['#AA4643', '#4572A7', '#89A54E', '#80699B' ],

            plotOptions: {
              column: {
                colorByPoint: true
              }
            }, 
            title: {
              text: 'Dashboard'
            },
            xAxis: {
              categories: [ <% @projects.map do |p| %> '<%= p.name %>', <% end %> ]
            },
            yAxis: {
              title: {
                  text: 'Qtd'
              }
            },
            plotOptions: {
                series: {
                    stacking: 'normal'
                }
            },
            series: [                         
            <% @tasks.map do |t| %>                        
            {
              name: '<%= t.status %>',                
              data: <%= raw(qtd_by(t.status , @projects)) %>
            },                         
              <% end %>                              
              ]            
          });        
      });    
    </script>
  </div>

<%= will_paginate(@projects) %>

<div>
  <% @projects.map do |project| %>     
      <div class="span4">
        <div class="card">
          <h3>            
            <a href="<%= projects_path %>"><%= project.name %></a>
          </h3>                
          <p><span>Current Sprint: <%= project.sprints.last.name unless project.sprints.empty? %></span></p>
        </div>
        <br />
      </div>                
  <% end %>   
</div>

