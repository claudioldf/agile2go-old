<%= javascript_include_tag "highcharts" %>
<%= javascript_include_tag "exporting" %>
  <div id="chart" style="width:100%; height:500px;"></div>
    <script type="text/javascript">
      $(function(){
          $('#chart').highcharts({
            chart: {
              type: 'bar'
            },
            colors: ['#AA4643', '#80699B', '#4572A7', '#89A54E' ],

            plotOptions: {
              column: {
                colorByPoint: true
              }
            },
            title: {
              text: 'Dashboard'
            },
            xAxis: {
              categories: [ <% @projects.map do |p| %> '<%= p.name %>', <% end %> ]
            },
            yAxis: {
              title: {
                  text: 'Qtd'
              }
            },
            plotOptions: {
                series: {
                    stacking: 'normal'
                }
            },
            series: [
            <% @tasks.map do |t| %>
            {
              name: '<%= t.status %>',
              data: <%= raw(qtd_by(t.status , @projects)) %>
            },
              <% end %>
              ]
          });
      });
    </script>
  </div>

<%= will_paginate(@projects) %>

<div>
  <% @projects.map do |project| %>
      <div class="span4">
        <div class="card-home">
          <h3>
            <%= link_to project.name, project_path(project) %>
          </h3>
          <p>
            <span>Current Sprint: <%= project.sprints.last.name unless project.sprints.empty? %></span>
          </p>
        </div>
        <br />
      </div>
  <% end %>
</div>

